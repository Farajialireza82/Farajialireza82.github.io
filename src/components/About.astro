---
import { siteConfig } from "../config";
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-5">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-gray-900 leading-tight"
        >
          About Me
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>

      <div class="lg:col-span-7 space-y-8">
        <div class="space-y-6">
          {siteConfig.aboutMe.map((paragraph) => (
            <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-600">
              {paragraph}
            </p>
          ))}
        </div>

        <div class="pt-4 space-y-8">
          <!-- Hard Skills Section -->
          <div>
            <h3 class="text-xl sm:text-2xl font-semibold text-gray-900 mb-6">Technical Skills</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {Object.entries(siteConfig.skills.hardSkills).map(([category, skills], index) => (
                <div class="p-4 bg-gray-50 rounded-lg border border-gray-200 hover:shadow-sm transition-all duration-300">
                  <div class="flex items-center gap-2 mb-4">
                    <div class="w-2 h-2 rounded-full bg-gray-400"></div>
                    <h4 class="text-lg font-medium text-gray-800">
                      {category}
                    </h4>
                  </div>
                  <div class="flex flex-wrap gap-2">
                    {skills.map((skill) => (
                      <span class="px-3 py-1.5 bg-white text-gray-700 rounded-full text-sm font-medium border border-gray-200 hover:bg-gray-50 hover:border-gray-300 transition-all duration-200">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Soft Skills Section -->
          <div>
            <h3 class="text-xl sm:text-2xl font-semibold text-gray-900 mb-6">Soft Skills</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              {Object.entries(siteConfig.skills.softSkills).map(([category, skills], index) => (
                <div class="p-4 bg-gray-50 rounded-lg border border-gray-200 hover:shadow-sm transition-all duration-300">
                  <div class="flex items-center gap-2 mb-4">
                    <div class="w-2 h-2 rounded-full bg-gray-400"></div>
                    <h4 class="text-lg font-medium text-gray-800">
                      {category}
                    </h4>
                  </div>
                  <div class="flex flex-wrap gap-2">
                    {skills.map((skill) => (
                      <span class="px-3 py-1.5 bg-white text-gray-700 rounded-full text-sm font-medium border border-gray-200 hover:bg-gray-50 hover:border-gray-300 transition-all duration-200">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
