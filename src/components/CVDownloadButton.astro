---
import { siteConfig } from "../config";
---

<a
  href={siteConfig.cv?.downloadUrl || "/cv/Alireza_Faraji_CV.pdf"}
  download
  class="group inline-flex items-center gap-2 px-4 py-2 sm:px-6 sm:py-3 bg-white border-2 border-gray-200 rounded-lg font-medium text-gray-700 transition-all duration-300 hover:border-[var(--accent-color)] hover:text-[var(--accent-color)] hover:shadow-lg hover:scale-105 focus:outline-none focus:ring-2 focus:ring-[var(--accent-color)] focus:ring-offset-2 w-fit"
  style={`--accent-color: ${siteConfig.accentColor}`}
  aria-label="Download CV"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="transition-transform duration-300 group-hover:scale-110"
  >
    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
    <polyline points="7,10 12,15 17,10" />
    <line x1="12" y1="15" x2="12" y2="3" />
  </svg>
  <span class="text-sm sm:text-base font-semibold">Download CV</span>
</a>

<style>
  /* Additional hover effects for better UX */
  .group:hover svg {
    transform: translateY(-1px);
  }
  
  /* Focus styles for accessibility */
  .group:focus-visible {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
  }
</style>
